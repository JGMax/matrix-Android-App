<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/time_selector_dialog_background">

    <!--<include layout="@layout/time_selector_bar" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <com.project.myapplication.barrelselector.SlowdownRecyclerView
            android:id="@+id/hoursSelector"
            android:layout_width="0dp"
            android:layout_height="280dp"
            android:layout_weight="1" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="|"
            android:textSize="32sp"
            android:textColor="@color/colorAccent"/>
        <com.project.myapplication.barrelselector.SlowdownRecyclerView
            android:id="@+id/minutesSelector"
            android:layout_width="0dp"
            android:layout_height="280dp"
            android:layout_weight="1"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="48dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:background="@drawable/button_panel_background">
        <ToggleButton
            android:id="@+id/soundButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical|start"
            android:textOn=""
            android:textOff=""
            android:background="@drawable/ic_volume_off"
            android:backgroundTint="@color/unselectedTimeSelectorButtonColor"/>
        <ToggleButton
            android:id="@+id/vibrationButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:textOn=""
            android:textOff=""
            android:background="@drawable/ic_vibration_on"
            android:backgroundTint="@color/unselectedTimeSelectorButtonColor"/>
        <ToggleButton
            android:id="@+id/sunriseButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical|end"
            android:textOn=""
            android:textOff=""
            android:background="@drawable/ic_sunny_on"
            android:backgroundTint="@color/unselectedTimeSelectorButtonColor" />
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="84dp"
        android:layout_marginVertical="28dp">
        <Button
            android:id="@+id/confirmTimeButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="start|center_vertical"
            android:background="@drawable/ic_check"
            android:backgroundTint="@color/unselectedTimeSelectorButtonColor"
            android:padding="32dp"/>

        <Button
            android:id="@+id/cancelTimeButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="end|center_vertical"
            android:background="@drawable/ic_close"
            android:backgroundTint="@color/unselectedTimeSelectorButtonColor"
            android:padding="32dp"/>
    </FrameLayout>

</LinearLayout>