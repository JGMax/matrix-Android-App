    <ListView
        android:visibility="gone"
        android:id="@+id/alarmsView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_weight="3"
        android:background="@color/appBackground"
        android:choiceMode="singleChoice"
        android:divider="@color/colorAccent"
        android:dividerHeight="2dp"
        android:footerDividersEnabled="true"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/alarmsLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sunText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="60sp"
                android:text="@string/sun"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:textStyle="bold|italic" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start">

                <ImageView
                    android:id="@+id/sunColor"
                    android:layout_width="175sp"
                    android:layout_height="175sp"
                    android:layout_gravity="center"
                    android:background="@drawable/color_circle" />

                <ImageView
                    android:id="@+id/sunTarget"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/target_circle" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sunriseText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textColor="@color/colorAccent" />

            <SeekBar
                android:id="@+id/sunriseBar"
                style="@style/SeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="60"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:progress="30" />

            <Button
                android:id="@+id/addAlarmButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/timeColor"
                    android:layout_width="175sp"
                    android:layout_height="175sp"
                    android:layout_gravity="center"
                    android:background="@drawable/color_circle" />

                <ImageView
                    android:id="@+id/timeTarget"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/target_circle" />

            </RelativeLayout>

            <TextView
                android:id="@+id/timeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/time"
                android:textColor="@color/colorAccent"
                android:textStyle="bold|italic" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/secondsColor"
                    android:layout_width="175sp"
                    android:layout_height="175sp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/color_circle" />

                <ImageView
                    android:id="@+id/secondsTarget"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/target_circle" />
            </RelativeLayout>

            <TextView
                android:id="@+id/secondsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:clickable="false"
                android:gravity="center"
                android:text="@string/seconds"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:textStyle="bold|italic" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/middleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/isEasterEgg"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#00FFFFFF" />

        <TextView
            android:id="@+id/dateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:clickable="false"
            android:gravity="center"
            android:text="@string/date"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            android:textStyle="bold|italic" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/dateColor"
                android:layout_width="175sp"
                android:layout_height="175sp"
                android:layout_weight="1"
                android:background="@drawable/color_circle" />

            <ImageView
                android:id="@+id/dateTarget"
                android:layout_width="25sp"
                android:layout_height="25sp"
                app:srcCompat="@drawable/target_circle" />
        </RelativeLayout>
    </LinearLayout>


    <SeekBar
        android:id="@+id/slideBar"
        style="@style/SeekBar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_weight="5"
        android:max="19"
        android:progress="19" />
    -->
</LinearLayout>